# Redirige internamente todas las solicitudes a la carpeta 'repositories/msystem'
RewriteEngine On
RewriteCond %{REQUEST_URI} !^/repositories/msystem/
RewriteRule ^(.*)$ /repositories/msystem/$1 [L]

# Configuración de caché para que todo se actualice
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 0 seconds"     # HTML siempre se recargará
    ExpiresByType text/css "access plus 0 seconds"      # CSS siempre se recargará
    ExpiresByType image/png "access plus 0 seconds"     # PNG siempre se recargará
    ExpiresByType image/jpeg "access plus 0 seconds"    # JPEG siempre se recargará
    ExpiresByType image/gif "access plus 0 seconds"     # GIF siempre se recargará
    ExpiresByType image/x-icon "access plus 0 seconds"  # Favicon siempre se recargará
    ExpiresByType image/svg+xml "access plus 0 seconds" # SVG siempre se recargará
</IfModule>
